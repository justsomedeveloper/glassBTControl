<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilikedesi.pierce.glassbtcontrol" >

    <uses-permission android:name="com.google.android.glass.permission.DEVELOPMENT"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ilikedesi.pierce.glassbtcontrol.activities.MainActivity"
            android:icon="@drawable/ic_glass_logo"
            android:label="@string/title_activity_btconnections" >
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>

            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/voice_trigger" />
        </activity>
        <activity android:name="com.ilikedesi.pierce.glassbtcontrol.activities.PresentationActivity"
                    android:label="@string/app_name"
            />
        <activity android:name="com.ilikedesi.pierce.glassbtcontrol.activities.BluetoothConnActivity"
            android:label="@string/app_name"
            />
            </application>

</manifest>
